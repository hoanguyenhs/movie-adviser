<div id="body" class="col-md-12">
    <div id="instrutions">
        <h2>Step 1: Upload your photo using "Upload" button</h2>
        <h2>Step 2: Click on "Ask our adviser" button to see recommended movies</h2>
        <h2>Step 3: Enjoy watching trailer and sharing on Facebook</h2>
    </div>
    <img id="fileUploadDisplay" />
    <div class="fileUpload btn btn-primary">
        <span class="glyphicon glyphicon-open" aria-hidden="true"></span>
        <span>Upload</span>
        <input id="fileUpload" type="file" class="upload" accept="image/*" />
    </div>
    <buton id="askBtn" class="btn btn-success">
        <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
        Ask our adviser
    </buton>
    
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 id="myModalHeader" class="modal-title"></h4>
                </div>
                <div id="myModalBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="results"></div>
</div>

<script src="~/ts/site.js"></script>
